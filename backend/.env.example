# Application
APP_NAME=Nutritionist Menu Planner
APP_ENV=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nutritionist_menu_planner
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.xlsx,.xls,.pdf,.hwp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External APIs (Optional)
# HOLIDAY_API_KEY=your-holiday-api-key
# NUTRITION_DB_API_KEY=your-nutrition-db-api-key
